<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" version="6.0">
  <display-name>wp-final-v2</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>jdbc.driverClassName</param-name>
    <param-value>org.h2.Driver</param-value>
  </context-param>
  <context-param>
    <param-name>jdbc.url</param-name>
    <param-value>jdbc:h2:tcp://localhost/~/test</param-value>
  </context-param>
  <context-param>
    <param-name>jdbc.username</param-name>
    <param-value>sa</param-value>
  </context-param>
  <context-param>
    <param-name>jdbc.password</param-name>
    <param-value></param-value>
  </context-param>
  <resource-ref>
    <res-ref-name>jdbc/h2_db</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <context-param>
    <param-name>dbcp_resource_name</param-name>
    <param-value>jdbc/h2_db</param-value>
  </context-param>
  <listener>
    <listener-class>com.wplab.service.MyServletContextListener</listener-class>
  </listener>
  <servlet>
    <description></description>
    <display-name>ConfirmController</display-name>
    <servlet-name>ConfirmController</servlet-name>
    <servlet-class>com.wplab.reserve.ConfirmController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ConfirmController</servlet-name>
    <url-pattern>/confirm</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ReserveController</display-name>
    <servlet-name>ReserveController</servlet-name>
    <servlet-class>com.wplab.reserve.ReserveController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReserveController</servlet-name>
    <url-pattern>/reserve</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>CancelController</display-name>
    <servlet-name>CancelController</servlet-name>
    <servlet-class>com.wplab.reserve.CancelController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CancelController</servlet-name>
    <url-pattern>/cancel</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>AdminReserveController</display-name>
    <servlet-name>AdminReserveController</servlet-name>
    <servlet-class>com.wplab.reserve.AdminReserveController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminReserveController</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>AdminDeleteController</display-name>
    <servlet-name>AdminDeleteController</servlet-name>
    <servlet-class>com.wplab.reserve.AdminDeleteController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminDeleteController</servlet-name>
    <url-pattern>/adminDelete</url-pattern>
  </servlet-mapping>
</web-app>